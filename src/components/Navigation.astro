---
import Logo from './Logo.astro';
import ContactButtons from './ContactButtons.astro';

// Navigation component
interface Props {
  currentPage?: 'home' | 'details';
  topOffset?: string;
}

const { currentPage = 'home', topOffset = 'top-0' } = Astro.props;
const navClass = 'fixed top-0 w-full bg-white border-b border-sage-200 z-50';
---

<nav class={navClass}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href="/" class="flex items-center space-x-3">
        <Logo />
        <span class="text-xl font-serif text-slate-700">Gîte du Coach</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {currentPage === 'home' ? (
          <>
            <a
              href="#about"
              class="nav-link text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif relative"
              data-section="about">À propos</a
            >
            <a
              href="#location"
              class="nav-link text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif relative"
              data-section="location">Emplacement</a
            >
            <a
              href="#gallery"
              class="nav-link text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif relative"
              data-section="gallery">Galerie</a
            >
            <a
              href="#contact"
              class="nav-link text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif relative"
              data-section="contact">Contact</a
            >
          </>
        ) : (
          <>
            <a href="/" class="text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif">Accueil</a>
            <a href="/#about" class="text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif">À propos</a>
            <a href="/#location" class="text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif">Emplacement</a>
            <a href="/#contact" class="text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif">Contact</a>
          </>
        )}
        <ContactButtons />
      </div>

      <!-- Mobile Burger Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-slate-600 hover:text-seafoam-500 transition-colors"
        aria-label="Toggle menu"
      >
        <svg
          id="menu-icon"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
        <svg
          id="close-icon"
          class="w-6 h-6 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          ></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden border-t border-sage-200 bg-white"
    >
      <div class="px-4 py-4 space-y-4">
        {currentPage === 'home' ? (
          <>
            <a
              href="#about"
              class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2"
              data-section="about">À propos</a
            >
            <a
              href="#location"
              class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2"
              data-section="location">Emplacement</a
            >
            <a
              href="#gallery"
              class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2"
              data-section="gallery">Galerie</a
            >
            <a
              href="#contact"
              class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2"
              data-section="contact">Contact</a
            >
          </>
        ) : (
          <>
            <a href="/" class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2">Accueil</a>
            <a href="/#about" class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2">À propos</a>
            <a href="/#location" class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2">Emplacement</a>
            <a href="/#contact" class="block text-slate-600 hover:text-seafoam-500 transition-colors text-sm font-serif py-2">Contact</a>
          </>
        )}
        <div class="pt-4 border-t border-sage-200 space-y-3">
          <a
            href="tel:0621548954"
            class="flex items-center gap-2 px-4 py-2 bg-emerald-50 hover:bg-emerald-100 border border-emerald-200 hover:border-emerald-400 rounded-lg transition-all duration-200 group"
          >
            <svg
              class="w-5 h-5 text-emerald-600 group-hover:text-emerald-700"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <span
              class="text-sm font-sans font-medium text-emerald-700 group-hover:text-emerald-800"
              >06 21 54 89 54</span
            >
          </a>
          <a
            href="mailto:info@summerrental.com"
            class="flex items-center gap-2 px-4 py-2 bg-blue-50 hover:bg-blue-100 border border-blue-200 hover:border-blue-400 rounded-lg transition-all duration-200 group"
          >
            <svg
              class="w-5 h-5 text-blue-600 group-hover:text-blue-700"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span class="text-sm font-sans font-medium text-blue-700 group-hover:text-blue-800">info@summerrental.com</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    } else {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      document.body.style.overflow = '';
    }
  });

  // Close menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      document.body.style.overflow = '';
    });
  });
</script>

