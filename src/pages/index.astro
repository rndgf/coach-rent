<script>
  // Reviews slider
  let currentReview = 0;
  const totalReviews = 3;
  const slider = document.getElementById("reviews-slider");
  const dots = document.querySelectorAll(".review-dot");

  function updateSlider() {
    slider.style.transform = `translateX(-${currentReview * 100}%)`;
    dots.forEach((dot, index) => {
      if (index === currentReview) {
        dot.classList.remove("bg-sage-200");
        dot.classList.add("bg-seafoam-500", "w-8");
      } else {
        dot.classList.remove("bg-seafoam-500", "w-8");
        dot.classList.add("bg-sage-200", "w-2");
      }
    });
  }

  document.getElementById("next-review")?.addEventListener("click", () => {
    currentReview = (currentReview + 1) % totalReviews;
    updateSlider();
  });

  document.getElementById("prev-review")?.addEventListener("click", () => {
    currentReview = (currentReview - 1 + totalReviews) % totalReviews;
    updateSlider();
  });

  dots.forEach((dot, index) => {
    dot.addEventListener("click", () => {
      currentReview = index;
      updateSlider();
    });
  });

  // Mobile Gallery Slider
  let currentMobileGallery = 0;
  const totalMobileGallery = 6;
  const mobileGallerySlider = document
    .getElementById("mobile-gallery-slider")
    ?.querySelector(".flex");
  const mobileGalleryDots = document.querySelectorAll(".mobile-gallery-dot");

  function updateMobileGallery() {
    if (mobileGallerySlider) {
      mobileGallerySlider.style.transform = `translateX(-${currentMobileGallery * 100}%)`;
    }
    mobileGalleryDots.forEach((dot, index) => {
      if (index === currentMobileGallery) {
        dot.classList.remove("bg-sage-200");
        dot.classList.add("bg-seafoam-500", "w-8");
      } else {
        dot.classList.remove("bg-seafoam-500", "w-8");
        dot.classList.add("bg-sage-200", "w-2");
      }
    });
  }

  document
    .getElementById("mobile-gallery-next")
    ?.addEventListener("click", () => {
      currentMobileGallery = (currentMobileGallery + 1) % totalMobileGallery;
      updateMobileGallery();
    });

  document
    .getElementById("mobile-gallery-prev")
    ?.addEventListener("click", () => {
      currentMobileGallery =
        (currentMobileGallery - 1 + totalMobileGallery) % totalMobileGallery;
      updateMobileGallery();
    });

  mobileGalleryDots.forEach((dot, index) => {
    dot.addEventListener("click", () => {
      currentMobileGallery = index;
      updateMobileGallery();
    });
  });

  // Touch/swipe support for mobile gallery
  let touchStartX = 0;
  let touchEndX = 0;
  const mobileGalleryContainer = document.getElementById(
    "mobile-gallery-slider"
  );

  mobileGalleryContainer?.addEventListener("touchstart", (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });

  mobileGalleryContainer?.addEventListener("touchend", (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  });

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;

    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        // Swipe left - next
        currentMobileGallery = (currentMobileGallery + 1) % totalMobileGallery;
      } else {
        // Swipe right - previous
        currentMobileGallery =
          (currentMobileGallery - 1 + totalMobileGallery) % totalMobileGallery;
      }
      updateMobileGallery();
    }
  }

  // Gallery modal
  const galleryImages = [
    {
      src: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=1200&h=800&fit=crop",
      alt: "Extérieur avec jardin",
    },
    {
      src: "https://images.unsplash.com/photo-1600607687644-c7171b42498b?w=1200&h=800&fit=crop",
      alt: "Cuisine",
    },
    {
      src: "https://images.unsplash.com/photo-1600607687920-4e2a09cf159d?w=1200&h=800&fit=crop",
      alt: "Chambre",
    },
    {
      src: "https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=1200&h=800&fit=crop",
      alt: "Salle de bain",
    },
    {
      src: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=1200&h=800&fit=crop",
      alt: "Terrasse et vue sur mer",
    },
    {
      src: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=1200&h=800&fit=crop",
      alt: "Jardin et végétation",
    },
  ];

  let currentGalleryIndex = 0;
  const modal = document.getElementById("gallery-modal");
  const modalImage = document.getElementById("gallery-modal-image");

  function openGallery(index) {
    currentGalleryIndex = index;
    modalImage.src = galleryImages[index].src;
    modalImage.alt = galleryImages[index].alt;
    modal.classList.remove("hidden");
    modal.classList.add("flex");
    document.body.style.overflow = "hidden";
  }

  function closeGallery() {
    modal.classList.add("hidden");
    modal.classList.remove("flex");
    document.body.style.overflow = "";
  }

  function changeGalleryImage(direction) {
    currentGalleryIndex =
      (currentGalleryIndex + direction + galleryImages.length) %
      galleryImages.length;
    modalImage.src = galleryImages[currentGalleryIndex].src;
    modalImage.alt = galleryImages[currentGalleryIndex].alt;
  }

  // Gallery item click handlers
  document.querySelectorAll(".gallery-item").forEach((item, index) => {
    item.addEventListener("click", () => {
      openGallery(index);
    });
  });

  // Modal button handlers
  document
    .getElementById("close-gallery")
    ?.addEventListener("click", closeGallery);
  document
    .getElementById("prev-gallery")
    ?.addEventListener("click", () => changeGalleryImage(-1));
  document
    .getElementById("next-gallery")
    ?.addEventListener("click", () => changeGalleryImage(1));

  // Close on ESC key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !modal.classList.contains("hidden")) {
      closeGallery();
    }
    if (e.key === "ArrowLeft" && !modal.classList.contains("hidden")) {
      changeGalleryImage(-1);
    }
    if (e.key === "ArrowRight" && !modal.classList.contains("hidden")) {
      changeGalleryImage(1);
    }
  });

  // Close on background click
  modal.addEventListener("click", (e) => {
    if (e.target === modal) {
      closeGallery();
    }
  });

  // Active navigation link highlighting
  const navLinks = document.querySelectorAll(".nav-link");
  const sections = document.querySelectorAll("section[id]");

  function updateActiveNav() {
    let current = "";
    const scrollY = window.pageYOffset;

    sections.forEach((section) => {
      const sectionHeight = section.offsetHeight;
      const sectionTop = section.offsetTop - 100;
      const sectionId = section.getAttribute("id");

      if (scrollY >= sectionTop && scrollY < sectionTop + sectionHeight) {
        current = sectionId;
      }
    });

    navLinks.forEach((link) => {
      link.classList.remove("active");
      if (link.getAttribute("data-section") === current) {
        link.classList.add("active");
      }
    });
  }

  window.addEventListener("scroll", updateActiveNav);
  window.addEventListener("load", updateActiveNav);
</script>

